@{
    Context.Request.Cookies.TryGetValue("Username", out string Username);
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Assignment 03 (Admin)</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href='~/css/site.css?v=@Guid.NewGuid().ToString()' rel='stylesheet' type='text/css' /><!--To update css file wehen ever it changes to stop browser cashe -->
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="#">@Username</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#slider">
            <svg class="bi bi-list" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor">
                <path fill-rule="evenodd" d="M2.5 11.5A.5.5 0 0 1 3 11h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 7h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 3h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z" />
            </svg>
        </button>
        <div class="collapse navbar-collapse" id="slider">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="Index">
                        Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn navbar-btn btn-danger" asp-controller="Homepage" asp-action="Logout">
                        Logout
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <br /><br /><br />
    <div>
        <center>
            @RenderBody()
        </center>
    </div>
</body>
</html>
