@model List<Assignment_03.Models.User>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>All Users List</h2>
<br />
<a class="btn btn-success" asp-controller="Admin" asp-action="CreateUser">Create New User</a>
<br />
<br />
<div class="col-md-10 mytable">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Profile Photo</th>
                <th>Name</th>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Assignment_03.Models.User user in Model)
            {
                <tr>
                    <td><img src="~/ProfileImages/@user.ProfileImageName" /></td>
                    <td>@user.Name</td>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>
                        <a class="btn btn-warning" asp-action="UpdateUser" asp-route-id="@user.ID">Update</a>
                        <a class="btn btn-danger"  asp-action="DeleteUser" asp-route-id="@user.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>